@model bevo.Models.AppUser
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckingAccounts)
        </th>
        <th>
            Balance
        </th>
        <th></th>
    </tr>

    @foreach (var c in ViewBag.CheckingAccounts)
    {
        <tr>
            <td>
                @c.AccountName
            </td>
            <td>
                $@c.Balance
            </td>
            <td>
                @Html.ActionLink("View Account", "Index",  new { id = c.CheckingAccountID })
            </td>
        </tr>
    }

</table>
