@model bevo.Models.AppUser
@using Microsoft.VisualBasic;

@{
    ViewBag.Title = "manager home";
}

<div class="row">
    <div class="homepage-top">
        <h2>Manager Home</h2>
    </div>
</div>


<div class="homepage row">
    <div class="quick-action-container col-lg-3">
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Process Portfolios",
                actionName: "Balance",
                controllerName: "StockPortfolio",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "All Disputes",
                actionName: "Index",
                controllerName: "Dispute",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Add Stocks",
                actionName: "Create",
                controllerName: "Withdraw",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
              linkText: "Manage Employees",
              actionName: "Index",
              controllerName: "PayBills",
              routeValues: null,
              htmlAttributes: new { @class = "quick-actions" })
        </p>
    </div>
    <div class="quick-action-button">
        <!--TODO: Move this somewhere else...-->
        <p>
            @Html.ActionLink(linkText: "View Account Info", actionName: "ViewInfo", routeValues: null, htmlAttributes: new { @class = "quick-actions" })
    </p>
</div>
</div>
<div class="homepage-container col-lg-9">
    <h3>Tasks awaiting Attention</h3>

    <table class="table">
        <tr>
            <th>
                Transaction
            </th>
            <th>
                Amount Disputed
            </th>
            <th>
                Customer
            </th>
            <th>
                Details
            </th>

        </tr>
        @foreach (var d in ViewBag.Disputes)
            {
            <tr>
                <td>
                    @d.TransName
                </td>
                <td>
                    @d.TransAmount
                </td>
                <td>
                    @d.CustNum
                </td>
                <td>
                    @Html.ActionLink(
                        linkText: "Details",
                        actionName: "Details",
                        controllerName: "Dispute",
                        routeValues: new { id = d.DisputeID },
                        htmlAttributes: null)
                </td>
            </tr>
        }
        @foreach (var t in ViewBag.Transactions)
            {
            <tr>
                <td>
                    @t.TransNum
                </td>
                <td>
                    @t.
                </td>
                <td>
                    @t.
                </td>
                <td>
                    @t.
                </td>
                <td>
                    @Html.ActionLink(
                        linkText: "Details",
                        actionName: "Details",
                        controllerName: "Transactions",
                        routeValues: new { id = t.TransactionID },
                        htmlAttributes: null)
                </td>
            </tr>
        }
    </table>
</div>

</div>

