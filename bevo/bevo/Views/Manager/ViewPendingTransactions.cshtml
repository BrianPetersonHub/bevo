@model IEnumerable<bevo.Models.TransViewModel>
@{
    ViewBag.Title = "pending transactions";
}
<h2>current disputes</h2>

<div class="homepage-container col-lg-9">
    <h3>List of Transactions</h3>
    <table class="table">
        <tr>
            <th>
                Date
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Transaction Number
            </th>
            <th>
                Type
            </th>
            <th>
                Amount
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>

        </tr>
        @foreach (var t in ViewBag.PendingTransactions)
            {
            <tr>
                <td>
                    @(t.Date.ToShortDateString())
                </td>
                <td>
                    @(t.FirstName)
                </td>
                <td>
                    @(t.LastName)
                </td>
                <td>
                    @(t.TransactionNum)
                </td>
                <td>
                    @(t.TransType)
                </td>
                <td>
                    $@t.Amount
                </td>
                <td>
                    @(t.Description)
                </td>
                <td>
                    @t.TransType
                </td>
                <td>
                    @Html.ActionLink(
                linkText: "Accept",
                actionName: "ApprovePendingTransactions",
                controllerName: "Manager",
                routeValues: new { id = t.TransactionID },
                htmlAttributes: null)
                </td>
                <td>
                    @Html.ActionLink(
                linkText: "Reject",
                actionName: "RejectPendingTransactions",
                controllerName: "Manager",
                routeValues: new { id = t.TransactionID },
                htmlAttributes: null)
                </td>
            </tr>
        }
    </table>
</div>

