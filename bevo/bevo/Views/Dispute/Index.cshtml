@model IEnumerable<bevo.Models.Dispute>

@{
    ViewBag.Title = "all disputes";
}

<h2>all disputes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Transaction.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisputeStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisputedAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManResolvedEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisputeStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisputedAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManResolvedEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DisputeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DisputeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DisputeID })
        </td>
    </tr>
}

</table>
