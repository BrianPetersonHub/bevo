@using Microsoft.AspNet.Identity
@model bevo.Models.StockPortfolio

@{
    ViewBag.Title = "Hello " + User.Identity.GetUserName() + "!";
}

<div class="row">
    <div class="homepage-top">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<!--TODO: add other info needed for checking account detail page-->
<div class="homepage row">
    <div class="quick-actions col-lg-3">
        <h3>Quick Actions</h3>
    </div>
    <div class="homepage-container col-lg-9">
        <h3>List of Transactions</h3><table class="table">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    From Account
                </th>
                <th>
                    To Account
                </th>
                <th>
                    Transaction Type
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Dispute
                </th>
                <th></th>
            </tr>

            @foreach (var t in ViewBag.Transactions)
            {
                <tr>
                    <td>
                        @t.Date
                    </td>
                    <td>
                        @t.FromAccount
                    </td>
                    <td>
                        @t.ToAccount
                    </td>
                    <td>
                        @t.TransType
                    </td>
                    <td>
                        @t.Amount
                    </td>
                    <td>
                        @t.Dispute
                    </td>
                    <td>
                        @Html.ActionLink(
                linkText: "Details",
                actionName: "Details",
                controllerName: "Transactions",
                routeValues: new { id = t.TransactionID },
                htmlAttributes: null)
                    </td>
                </tr>
            }

        </table>
    </div>

</div>
