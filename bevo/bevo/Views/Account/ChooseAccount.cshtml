@{
    ViewBag.Title = "Choose Bank Account Type";
}


<link rel="stylesheet" href="../css/ChooseAccount.css" />

<div class="row">
    <div class="homepage-top">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="container choose-account-container">
