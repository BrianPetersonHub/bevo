            <div class="item-button">
                <p>
                    @Html.ActionLink(
                linkText: "IRA Account",
                actionName: "Create",
                controllerName: "IRAccount",
                routeValues: null,
                htmlAttributes: new { @class = "item" })
                </p>
            </div>
            
            <div class="item-button">
                <p>
                    @Html.ActionLink(
                linkText: "Stock Portfolio",
                actionName: "Create",
                controllerName: "StockPortfolio",
                routeValues: null,
                htmlAttributes: new { @class = "item" })
                </p>
            </div>
        </div>
    </div>
</div>


