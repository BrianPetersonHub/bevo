@model bevo.Models.CheckingAccount

<!-- This page shows detail for one checking account
    Information needed on this page:
    - Balance
    - List of transactions

    -->

@{
    ViewBag.Title = "Checking Account Home";
}

<h2>@ViewBag.Title</h2>

<!--TODO: add other info needed for checking account detail page-->



<h3>List of Transactions</h3>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            From Account
        </th>
        <th>
            To Account
        </th>
        <th>
            Transaction Type
        </th>
        <th>
            Amount
        </th>
        <th>
            Dispute
        </th>
        <th></th>
    </tr>

@foreach (var t in ViewBag.Transactions) {
    <tr>
        <td>
            @t.Date
        </td>
        <td>
            @t.FromAccount
        </td>
        <td>
            @t.ToAccount
        </td>
        <td>
            @t.TransType
        </td>
        <td>
            @t.Amount
        </td>
        <td>
            @t.Dispute
        </td>
        <td>
            @Html.ActionLink(
                linkText: "Details",
                actionName: "Details",
                controllerName: "Transactions",
                routeValues: new { id = t.TransactionID },
                htmlAttributes: null)        
        </td>
    </tr>
}

</table>
