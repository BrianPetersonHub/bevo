@model bevo.Models.Transaction

<!-- This page shows detail for one checking account
    Information needed on this page:
    - Balance
    - List of transactions

    -->

@{
    ViewBag.Title = "Checking Account Home";
}

<h2>@ViewBag.Title</h2>

<!--TODO: add other info needed for checking account detail page-->



<h3>List of Transactions</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dispute)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToAccount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dispute)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.TransactionID }) |
        </td>
    </tr>
}

</table>
