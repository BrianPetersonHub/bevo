@using Microsoft.AspNet.Identity
@model bevo.Models.CheckingAccount

@{
    ViewBag.Title = "checking account details";
}

<div class="row">
    <div class="homepage-top">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<!--TODO: add other info needed for checking account detail page-->
<div class="homepage row">
    <div class="quick-action-container col-lg-3">
        <div class="stock-value">
            <h3>Current Value</h3>
            <div class="value-container">
                <p>@ViewBag.Balance</p>
            </div>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Make Deposit",
                actionName: "Create",
                controllerName: "Deposit",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Make Transfer",
                actionName: "Create",
                controllerName: "Transfer",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Make Withdraw",
                actionName: "Create",
                controllerName: "Withdraw",
                routeValues: null,
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Change Account Name",
                actionName: "EditName",
                controllerName: "CheckingAccounts",
                routeValues: new { id = Model.CheckingAccountID },
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
        <div class="quick-action-button">
            <p>
                @Html.ActionLink(
                linkText: "Search Transactions",
                actionName: "Home",
                controllerName: "Transactions",
                routeValues: new { id = Model.CheckingAccountID },
                htmlAttributes: new { @class = "quick-actions" })
            </p>
        </div>
</div>
    <div class="homepage-container col-lg-9">
        <h3>List of Pending Transactions</h3>
        <table class="table">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Transaction Type
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Status
                </th>
            </tr>

            @foreach (var t in ViewBag.PendingTransactions)
            {
                <tr>
                    <td>
                        @(t.Date.ToShortDateString())
                    </td>
                    <td>
                        @t.TransType
                    </td>
                    <td>
                        $@t.Amount
                    </td>
                    <td>
                        Pending
                    </td>
                </tr>
            }

        </table>
        <h3>List of Transactions</h3>
        <table class="table">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Transaction Type
                </th>
                <th>
                    Amount
                </th>
                <th>
                    More info
                </th>



            </tr>

            @foreach (var t in ViewBag.Transactions)
            {
                <tr>
                    <td>
                        @(t.Date.ToShortDateString())
                    </td>
                    <td>
                        @t.TransType
                    </td>
                    <td>
                        $@t.Amount
                    </td>
                    <td>
                        @Html.ActionLink(
                linkText: "Details",
                actionName: "Detail",
                controllerName: "Transactions",
                routeValues: new { id = t.TransactionID },
                htmlAttributes: null)
                    </td>
                </tr>
            }

        </table>

    </div>

</div>